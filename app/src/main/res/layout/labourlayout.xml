<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/labourrel">
    <androidx.cardview.widget.CardView
        android:id="@+id/cvcard2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:id="@+id/homerel2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civcircle2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/tvlabname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_toRightOf="@+id/civcircle2"
                android:text="name of person"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvlabplace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvlabname"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/civcircle2"
                android:text="Place"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvskills"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/civcircle2"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:text="Skills - "
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvlabtype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/civcircle2"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/tvskills"
                android:text="jsdhjsdah"
                android:textColor="@color/black"
                android:textSize="16sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 km away"
                android:textColor="@color/purple_200"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/tvlabtype"
                android:id="@+id/tvdistancelab"
                android:layout_margin="10dp"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/tvcharges"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvskills"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:text="Charges- "
                android:textColor="@color/black"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/tvchargesrs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvskills"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/tvcharges"
                android:layout_marginBottom="15dp"
                android:text="Charges- "
                android:textColor="#bd1704"
                android:textSize="15sp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>